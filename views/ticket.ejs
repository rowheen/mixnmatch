<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <title>MixnMatch</title>

    <style>
        .card-img-top {
            height: 200px; /* Fixed height for images */
            object-fit: scale-down; /* Cover the area without stretching */
        }
        .card {
            height: 100%; /* Ensure the card takes full height of its container */
        }
        @media print {
            body * {
                display: none; /* Hide everything */
            }
            #ticket {
                display: block; /* Show only the ticket card */
            }
        }
    </style>
</head>
<body>
    <!-- Navbar with Title -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <h3 class="navbar-brand mb-0">MixnMatch</h3>
        </div>
    </nav>
    
    <div class="d-flex flex-column align-items-center">
        <div id="ticket" class="card" style="width: 18rem;">
            <img class="card-img-top" src="/ticket.png" alt="Ticket Image" style="height: 180px; width: 100%; display: block;">
            <div class="card-body">
                <h5 class="card-title d-flex flex-column align-items-center">Ticket</h5>
                <div class="d-flex flex-column align-items-center">
                    <div>
                        <button onclick="printTicket()" class="btn btn-secondary">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
    <script>
        function printTicket() {
            const ticket = document.getElementById('ticket').outerHTML;
            const printWindow = window.open('', '', 'height=400,width=600');
            printWindow.document.write('<html><head><title>Print Ticket</title>');
            printWindow.document.write('<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">');
            printWindow.document.write('</head><body>');
            printWindow.document.write(ticket); // Write the ticket card HTML
            printWindow.document.write('</body></html>');
            printWindow.document.close(); // Close the document
            printWindow.print(); // Trigger the print dialog
        }
    </script>
</body>
</html>
